@using icrm.Models
@model LoginViewModel
@{
    Layout = null;
}

<h2>@ViewBag.Title.</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Meta -->
    <meta name="description" content="feedback managment system.">
    <meta name="author" content="feedback">

    <link rel="shortcut icon" href="~/Content/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/img/favicon.ico" type="image/x-icon">

    <title>Feedback</title>

    <!-- Vendor css -->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />

    <!-- Slim CSS -->

    <link rel="stylesheet" href="~/Content/css/slim.css">

</head>
<body>

    <div class="signin-wrapper">
        
        <div class="signin-box">
            <ul>
                <li>@Html.ActionLink("english", "SetenglishCulture/Login/Account", "Culture")</li>
                <li>@Html.ActionLink("arabic", "SetarabicCulture/Login/Account", "Culture")</li>

            </ul>
            

            <h2 class="slim-logo text-center"><a href="#"><img src="~/Content/img/m_logo.png" width="60px"><span></span></a></h2>
            <a href="@Url.Action("index","DownloadAPK")" class="nav-link text-center"><i class="icon ion-ios-bolt"></i> Download APK</a>
            <h2 class="signin-title-primary">@Resources.Resource.Welcome_back</h2>
            <h3 class="signin-title-secondary">@Resources.Resource.Sign_in_to_continue</h3>

            @Html.ValidationSummary()
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = Resources.Resource.Enter_your_email })

                </div><!-- form-group -->
                <div class="form-group mg-b-50">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = Resources.Resource.Enter_your_password })

                </div><!-- form-group -->
                <button class="btn btn-primary btn-block btn-signin">@Resources.Resource.Sign_in</button>
                <p class="mg-b-0">@Resources.Resource.Dont_have_an_account  @Html.ActionLink(Resources.Resource.Sign_up, "Register")</p>
            }
        </div><!-- signin-box -->

    </div><!-- signin-wrapper -->

    <script src="~/Content/lib/jquery/js/jquery.js"></script>
    <script src="~/Content/lib/popper.js/js/popper.js"></script>
    <script src="~/Content/lib/bootstrap/js/bootstrap.js"></script>

    <script src="~/Content/js/slim.js"></script>

</body>
</html>

